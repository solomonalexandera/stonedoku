rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can read any profile, but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
      
      // Badges subcollection
      match /badges/{badgeId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Match history - players can read matches they participated in
    match /matchHistory/{matchId} {
      allow read: if request.auth != null && 
                   (resource.data.player1 == request.auth.uid || 
                    resource.data.player2 == request.auth.uid);
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}
