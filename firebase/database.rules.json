{
  "rules": {
    ".read": false,
    ".write": false,
    "presence": {
      ".read": "auth != null",
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.hasChildren(['status', 'displayName', 'last_changed']) && (newData.child('status').val() == 'online' || newData.child('status').val() == 'offline')"
      }
    },
    "lobbies": {
      ".read": "auth != null",
      "$roomCode": {
        ".write": "auth != null && ( !data.exists() ? newData.child('host').val() == auth.uid : root.child('lobbies').child($roomCode).child('host').val() == auth.uid )",
        ".validate": "!data.exists() || (data.exists() && (newData.child('host').val() == auth.uid || newData.child('players').hasChild(auth.uid) || data.child('players').hasChild(auth.uid)))",
        "players": {
          "$playerId": {
            ".read": "auth != null",
            ".write": "auth != null && (auth.uid == $playerId || root.child('lobbies').child($roomCode).child('host').val() == auth.uid)"
          }
        },
        "rematchVotes": {
          "$voterId": {
            ".read": "auth != null",
            ".write": "auth != null && (auth.uid == $voterId || root.child('lobbies').child($roomCode).child('host').val() == auth.uid || root.child('lobbies').child($roomCode).child('players').child(auth.uid).exists())",
            ".validate": "newData.hasChildren(['vote']) && (newData.child('vote').val() === true || newData.child('vote').val() === false)"
          }
        }
      }
    },
    "matches": {
      "$matchId": {
        ".read": "auth != null && data.child('playerIds').hasChild(auth.uid)",
        ".write": "auth != null && (data.exists() ? data.child('playerIds').hasChild(auth.uid) : newData.child('playerIds').hasChild(auth.uid))",
        ".validate": "newData.hasChildren(['id', 'players', 'board', 'solution'])"
      }
    },
    "globalChat": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$messageId": {
        ".validate": "newData.hasChildren(['userId', 'displayName', 'text', 'timestamp']) && newData.child('userId').val() === auth.uid"
      }
    },
    "dmParticipants": {
      "$dmId": {
        ".read": "auth != null && (data.child('a').val() === auth.uid || data.child('b').val() === auth.uid)",
        // Allow creating the participant record, and allow idempotent re-writes that keep the same pair.
        ".write": "auth != null && (!data.exists() || (data.child('a').val() === newData.child('a').val() && data.child('b').val() === newData.child('b').val())) && (newData.child('a').val() === auth.uid || newData.child('b').val() === auth.uid)",
        ".validate": "newData.hasChildren(['a', 'b']) && newData.child('a').isString() && newData.child('b').isString() && newData.child('a').val() !== newData.child('b').val()"
      }
    },
    "directMessages": {
      "$dmId": {
        ".read": "auth != null && root.child('dmParticipants').child($dmId).exists() && (root.child('dmParticipants').child($dmId).child('a').val() === auth.uid || root.child('dmParticipants').child($dmId).child('b').val() === auth.uid)",
        ".write": "auth != null && root.child('dmParticipants').child($dmId).exists() && (root.child('dmParticipants').child($dmId).child('a').val() === auth.uid || root.child('dmParticipants').child($dmId).child('b').val() === auth.uid)",
        "$messageId": {
          ".validate": "newData.hasChildren(['from', 'to', 'text', 'timestamp']) && newData.child('from').val() === auth.uid"
        }
      }
    },
    "dmThreads": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        "$otherUserId": {
          ".read": "auth != null && (auth.uid == $userId || auth.uid == $otherUserId)",
          ".write": "auth != null && (auth.uid == $userId || auth.uid == $otherUserId)",
          ".validate": "newData.hasChildren(['lastText', 'lastTimestamp', 'lastFrom'])"
        }
      }
    },
    "notifications": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && (auth.uid == $userId || auth.uid == newData.child('from').val())"
      }
    }
  }
}
