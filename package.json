{
  "type": "module",
  "dependencies": {
    "@google-cloud/storage": "^7.18.0",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "^15.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "chokidar": "^4.0.3",
    "rollup": "^4.12.0",
    "ws": "^8.18.3"
  },
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "node --test tests/unit/*.mjs",
    "test:e2e": "playwright test",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "migrate:avatars:dry": "node scripts/migrate-avatars.js --dry",
    "migrate:avatars": "RUN_MIGRATION=1 node scripts/migrate-avatars.js",
    "auth:delete:dry": "node scripts/delete-all-users.js",
    "auth:delete": "RUN_DELETE=1 node scripts/delete-all-users.js",
    "dev": "node scripts/dev.mjs",
    "preview": "npm run dev"
  }
}
